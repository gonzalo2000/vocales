<div class="booyah-box col-xs-10 col-xs-offset-1">
  <div class="text-center">

    <%= audio_tag(@random_u.sound, autoplay: true) %>
    
    <!-- circled vowel plays sound -->
    <%= audio_tag "u.mp3", class: "audio-play" %>
    <%= link_to '#', id: 'audioButtonU' do %>
      <span class="vowel-circle">U</span>
    <% end %>

    <br><br>

    <%= audio_tag @random_u.sound %>
    <%= link_to '#', id: 'vowelButton' do %>
      <%= image_tag(@random_u.image, class: 'img-responsive') %>
    <% end %>

    <br>

    <mark><%= @random_u.term %></mark>

    <br><br>

    <%= link_to u_path do %>
      <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
    <% end %>

    <br><br><br><br>

    <%= link_to root_path do %>
      <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
    <% end %>
  </div>
</div>