<div class="booyah-box col-xs-10 col-xs-offset-1">
  <div class="text-center">
    
    <!-- circled vowel plays sound -->
    <%= audio_tag "i.mp3", class: "audio-play" %>
    <%= link_to '#', id: 'audioButtonI' do %>
      <span class="vowel-circle">I</span>
    <% end %>

    <br><br>

    <%= audio_tag @random_i.sound %>
    <%= link_to '#', id: 'vowelButton' do %>
      <%= image_tag(@random_i.image, class: 'img-responsive') %>
    <% end %>

    <br><br>

    <mark><%= @random_i.term %></mark>

    <br><br><br>

    <%= link_to i_path do %>
      <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
    <% end %>

    <br><br><br><br>

    <%= link_to root_path do %>
      <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
    <% end %>
  </div>
</div>
