<div class="booyah-box col-xs-10 col-xs-offset-1">
  <div class="text-center">

    <%= audio_tag(@word.sound, autoplay: true) %>
    
    <%= link_to '#', id: 'azarButton' do %>
      <span class="glyphicon glyphicon-question-sign" aria-hidden="true"></span>
      <br><br>
      <%= image_tag(@word.image, class: 'img-responsive') %>
    <% end %>
    
    <br><br>

    <!-- button display logic -->
    <%= audio_tag "error.mp3", class: "audio-play" %>
    <% if @word.term[0] == "a" || @word.term[0] == "á" || @word.term[0] == "A" || @word.term[0] == "Á" %>
      <%= link_to 'A', azar_path, class: 'btn btn-success btn-lg' %>
    <% else %>
      <button type="button" class="btn btn-success btn-lg audio-button">A</button>
    <% end %>

    &nbsp

    <% if @word.term[0] == "e" || @word.term[0] == "é" || @word.term[0] == "E" || @word.term[0] == "É" %>
      <%= link_to 'E', azar_path, class: 'btn btn-success btn-lg' %>
    <% else %>
      <button type="button" class="btn btn-success btn-lg audio-button">E</button>
    <% end %>

    &nbsp

    <% if @word.term[0] == "i" || @word.term[0] == "í" || @word.term[0] == "I" || @word.term[0] == "Í" %>
      <%= link_to 'I', azar_path, class: 'btn btn-success btn-lg' %>
    <% else %>
      <button type="button" class="btn btn-success btn-lg audio-button">I</button>
    <% end %>

    &nbsp

    <% if @word.term[0] == "o" || @word.term[0] == "ó" || @word.term[0] == "O" || @word.term[0] == "Ó" %>
      <%= link_to 'O', azar_path, class: 'btn btn-success btn-lg' %>
    <% else %>
      <button type="button" class="btn btn-success btn-lg audio-button">O</button>
    <% end %>

    &nbsp

    <% if @word.term[0] == "u" || @word.term[0] == "ú" || @word.term[0] == "U" || @word.term[0] == "Ú" %>
      <%= link_to 'U', azar_path, class: 'btn btn-success btn-lg' %>
    <% else %>
      <button type="button" class="btn btn-success btn-lg audio-button">U</button>
    <% end %>
    <!-- button end logic -->

    <br><br><br><br><br>

    <%= link_to root_path do %>
      <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
    <% end %>
  </div>
</div>
