<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1>Al Azar</h1>

  <%= @word.term %>

  <br><br>

  <!-- button display logic -->
  <% if @word.term[0] == "a" %>
    <p>The above word starts with A</p>
  <% else %>
    <p>The above word doesn't start with A</p>
  <% end %>

  <% if @word.term[0] == "e" || @word.term[0] == "é" %>
    <p>The above word starts with E</p>
  <% else %>
    <p>The above word doesn't start with E</p>
  <% end %>

  <% if @word.term[0] == "i" || @word.term[0] == "í" %>
    <p>The above word starts with I</p>
  <% else %>
    <p>The above word doesn't start with I</p>
  <% end %>

  <% if @word.term[0] == "o" || @word.term[0] == "ó" %>
    <p>The above word starts with O</p>
  <% else %>
    <p>The above word doesn't start with O</p>
  <% end %>

  <% if @word.term[0] == "u" || @word.term[0] == "ú" %>
    <p>The above word starts with U</p>
  <% else %>
    <p>The above word doesn't start with U</p>
  <% end %>



  <br>

  <%= link_to 'Otra', azar_path, class: 'btn btn-primary' %>
</div>
