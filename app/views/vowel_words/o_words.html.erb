<div class="booyah-box col-xs-10 col-xs-offset-1">
  <div class="text-center">

    <%= audio_tag(@random_o.sound, autoplay: true) %>
    
    <!-- circled vowel plays sound -->
    <%= audio_tag "o.mp3", class: "audio-play" %>
    <%= link_to '#', id: 'audioButtonO' do %>
      <span class="vowel-circle">O</span>
    <% end %>

    <br><br>

    <%= audio_tag @random_o.sound %>
    <%= link_to '#', id: 'vowelButton' do %>
      <%= image_tag(@random_o.image, class: 'img-responsive') %>
    <% end %>

    <br>

    <mark><%= @random_o.term %></mark>

    <br><br>

    <%= link_to o_path do %>
      <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
    <% end %>

    <br><br><br><br>

    <%= link_to root_path do %>
      <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
    <% end %>
  </div>
</div>
